
<form  action='@Url.Action("GuardarRestaurante", "Home", new {IdCategoria = @ViewBag.IdCategoria})' method="post" enctype="multipart/form-data">
<input type="hidden" name="IdCategoria" value="@ViewBag.IdCategoria">
<p class="letraForm">Nombre --> <input  class="letraForm" type="text" name ="Nombre" required></p>
